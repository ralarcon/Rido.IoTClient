{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "iot:Publish"
      ],
      "Resource": [
        "arn:aws:iot:us-west-2:713979639678:topic/$aws/things/TheThing/shadow/get",
        "arn:aws:iot:us-west-2:713979639678:topic/$aws/things/TheThing/shadow/update"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "iot:Receive"
      ],
      "Resource": [
        "arn:aws:iot:us-west-2:713979639678:topic/$aws/things/TheThing/shadow/get/accepted",
        "arn:aws:iot:us-west-2:713979639678:topic/$aws/things/TheThing/shadow/get/rejected",
        "arn:aws:iot:us-west-2:713979639678:topic/$aws/things/TheThing/shadow/update/accepted",
        "arn:aws:iot:us-west-2:713979639678:topic/$aws/things/TheThing/shadow/update/rejected",
        "arn:aws:iot:us-west-2:713979639678:topic/$aws/things/TheThing/shadow/update/delta"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "iot:Subscribe"
      ],
      "Resource": [
        "arn:aws:iot:us-west-2:713979639678:topicfilter/$aws/things/TheThing/shadow/get/accepted",
        "arn:aws:iot:us-west-2:713979639678:topicfilter/$aws/things/TheThing/shadow/get/rejected",
        "arn:aws:iot:us-west-2:713979639678:topicfilter/$aws/things/TheThing/shadow/update/accepted",
        "arn:aws:iot:us-west-2:713979639678:topicfilter/$aws/things/TheThing/shadow/update/rejected",
        "arn:aws:iot:us-west-2:713979639678:topicfilter/$aws/things/TheThing/shadow/update/delta"
      ]
    },
    {
      "Effect": "Allow",
      "Action": "iot:Connect",
      "Resource": "arn:aws:iot:us-west-2:713979639678:client/test-*"
    }
  ]
}             